<Page
    x:Class="CalculoIMC.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CalculoIMC"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="White">

    <Grid>
        <TextBlock x:Name="lblPeso"  FontSize="25" Foreground="Black" HorizontalAlignment="Left" Margin="10,149,0,0" TextWrapping="Wrap" Text="Peso" VerticalAlignment="Top"/>
        <TextBox x:Name="txtPeso"  HorizontalAlignment="Left" Margin="10,179,0,0" TextWrapping="Wrap" Text="Peso" VerticalAlignment="Top" BorderBrush="Red" Width="380" InputScope="Number"/>
        <TextBlock x:Name="lblAltura"  FontSize="25" Foreground="Black" HorizontalAlignment="Left" Margin="10,229,0,0" TextWrapping="Wrap" Text="Altura" VerticalAlignment="Top"/>
        <TextBox x:Name="txtAltura" HorizontalAlignment="Left" Margin="10,259,0,0" TextWrapping="Wrap" Text="Altura" VerticalAlignment="Top" BorderBrush="Red" Width="380" InputScope="Number"/>
        <Button x:ConnectionId='1' x:Name="btnCalcular" Content="Calcular IMC" HorizontalAlignment="Left" Margin="10,341,0,0" Background="Green" VerticalAlignment="Top" Foreground="Black"  Width="213"                          />
        <TextBlock x:Name="lblResultado" FontSize="25" Foreground="Black" HorizontalAlignment="Left" Height="56" Margin="10,427,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="296"/>
        


    </Grid>
</Page>

